<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LoginSignup">


   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:translationZ="-3dp"
       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/login_img"
           android:scaleType="centerCrop"
           android:alpha="0.8"
           android:translationZ="-3dp"
           android:background="#800080">
       </ImageView>

       <View
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/linear_white_transparent_background"
           android:translationZ="-2dp" />


   </FrameLayout>
    
<ViewFlipper
    android:id="@+id/flipper"
    android:layout_width="match_parent"
    android:layout_marginTop="-20dp"
    android:layout_height="wrap_content">






    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/loginview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Login"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="5dp"></TextView>

        <EditText
            android:id="@+id/loginmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:maxLines="1"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/loginpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/password"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></EditText>
        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:paddingRight="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/blue_text"
            android:textAlignment="viewEnd"
            android:textSize="14dp"></TextView>
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/primary_purple"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:textSize="21dp"></Button>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginviagoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login via Google"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/google"
            android:drawablePadding="5dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:background="@drawable/white_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textSize="18dp"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="New User?">
            </TextView>
            <TextView
                android:id="@+id/switchtosignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="14dp"
                android:textColor="@color/blue_text"
                android:clickable="true">
            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/signupview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Sign Up"

            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginLeft="5dp"></TextView>

        <EditText
            android:id="@+id/signupphonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:inputType="phone"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/signupemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/signuppass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/password"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"></EditText>

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="@color/primary_purple"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="21dp"></Button>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Already a User?">
            </TextView>
            <TextView
                android:id="@+id/switchtologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="14dp"
                android:textColor="@color/blue_text"
                android:clickable="true">
            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ViewFlipper>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"></ImageView>

</androidx.appcompat.widget.LinearLayoutCompat>