<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

   <ImageView
       android:id="@+id/img1"
       android:layout_width="match_parent"
       android:layout_height="350dp"
       android:src="@drawable/login_img"
       android:alpha="0.4"></ImageView>
   
   <TextView
       android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="Hello Moksh!!"
       android:textStyle="bold"
      android:textSize="28dp"
       android:layout_marginTop="-220dp"
       android:layout_below="@+id/img1"></TextView>

   <androidx.viewpager2.widget.ViewPager2
       android:paddingRight="10dp"
       android:layout_marginLeft="20dp"
       android:id="@+id/viewPager"
       android:layout_width="350dp"
       android:layout_height="200dp"
       android:layout_below="@+id/img1"
       android:layout_marginTop="-180dp" />


   <LinearLayout
       android:id="@+id/mid_layout"
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:paddingLeft="20dp"
       android:weightSum="10"

       android:gravity="center_vertical"
       android:layout_below="@id/viewPager"
      android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_weight="0"
          android:layout_marginLeft="10dp"
          android:id="@+id/sos_button"
          android:layout_marginRight="20dp"
          android:layout_width="80dp"
          android:layout_alignParentStart="true"
          android:layout_height="80dp"
         app:cardCornerRadius="50dp"
         android:background="@drawable/pink_purple_gradient">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
            android:background="@drawable/pink_purple_gradient">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
               android:src="@drawable/alert_icon"></ImageView>

         </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_weight="5"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:id="@id/sos_button"
         android:layout_alignParentEnd="true"
         app:cardCornerRadius="30dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:paddingLeft="20dp"
               android:background="@drawable/pink_purple_gradient">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:text="SOS Alert"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="@color/white"></TextView>

         </LinearLayout>
      </androidx.cardview.widget.CardView>



   </LinearLayout>

   <LinearLayout
       android:id="@+id/feature1"
       android:weightSum="10"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
      android:layout_below="@id/mid_layout">

      <androidx.cardview.widget.CardView
          android:id="@+id/fakecall_button"
          android:layout_width="0dp"
          android:layout_weight="4"
          app:cardCornerRadius="20dp"
          android:layout_height="80dp">


         <LinearLayout
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background="#e8e9eb"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
               android:src="@drawable/alert_icon"
               app:tint="@color/black">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Fake Call"
               android:layout_marginLeft="10dp"
               android:textSize="18dp"
               android:textColor="@color/black"></TextView>

         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
         android:layout_weight="1"></View>

      <androidx.cardview.widget.CardView
          android:id="@+id/safeplaces_button"
          android:layout_width="0dp"
          android:layout_weight="4"
          app:cardCornerRadius="20dp"
          android:layout_height="80dp">


         <LinearLayout
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background="#e8e9eb"
             android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/alert_icon"
                app:tint="@color/black">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Place"

                android:textSize="18dp"
                android:textColor="@color/black"></TextView>

         </LinearLayout>
      </androidx.cardview.widget.CardView>

   </LinearLayout>


   <LinearLayout
       android:weightSum="10"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:layout_below="@id/feature1">

      <androidx.cardview.widget.CardView
          android:id="@+id/geofencing"
          android:layout_width="0dp"
          android:layout_weight="4"
          app:cardCornerRadius="20dp"
          android:layout_height="80dp">


         <LinearLayout
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background="#e8e9eb"
             android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/alert_icon"
                app:tint="@color/black">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Call"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"></View>

      <androidx.cardview.widget.CardView
          android:id="@+id/audio"
          android:layout_width="0dp"
          android:layout_weight="4"
          app:cardCornerRadius="20dp"
          android:layout_height="80dp">


         <LinearLayout
             android:gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="10dp"
             android:background="#e8e9eb"
             android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/alert_icon"
                app:tint="@color/black">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Place"

                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

         </LinearLayout>
      </androidx.cardview.widget.CardView>

   </LinearLayout>


   
</RelativeLayout>